@model AUEUMS.View_Models.DashboardReportStudentAssignmentsList
@{
    @Html.AntiForgeryToken()
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers

<ul class="todo-list-wrapper list-group list-group-flush">
    @{
        var indx = 1;
        var Colorindicators = "bg-info";
    }

    @if (Model != null)
    {
        @foreach (var item in Model.dashlistStudentAssignments)
        {
            indx++;
            @if (indx > 4)
            {
                indx = 1;
            }
            @if (indx == 1)
            {
                Colorindicators = "bg-warning";
            }
            else if (indx == 2)
            {
                Colorindicators = "bg-focus";
            }
            else if (indx == 3)
            {
                Colorindicators = "bg-success";
            }
            else if (indx == 4)
            {
                Colorindicators = "bg-info";
            }
            else
            {
                Colorindicators = "bg-primary";
            }


            <li class="list-group-item">
                <div class="todo-indicator @Colorindicators"></div>
                <div class="widget-content p-0">
                    <div class="widget-content-wrapper">
                        <div class="widget-content-left mr-2">                          
                        </div>
                        <div class="widget-content-left">
                            <div class="widget-heading">
                                @item.DisplayAssignmentTitle
                            </div>
                            <div class="widget-subheading"><b>@item.DisplayScore</b></div>
                        </div>
                        @if (@item.mScoreRange<5)
                        {
                            <div class="widget-content-right ml-3">
                                <div class="badge badge-danger ml-2">@item.mGradingCriteria</div>
                            </div>

                        }
                        else
                        {
                            <div class="widget-content-right ml-3">
                                <div class="badge badge-pill badge-success">@item.mGradingCriteria</div>
                            </div>
                        }
                    </div>
                </div>
            </li>
        }
    }

</ul>

